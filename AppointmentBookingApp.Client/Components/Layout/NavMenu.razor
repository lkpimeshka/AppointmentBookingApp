@rendermode InteractiveServer
<MudThemeProvider @bind-IsDarkMode="@_isDarkMode" Theme="_theme" />


<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Appointment Booking</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <AuthorizeView Roles="Admin">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="user-list">
                        <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> User List
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
        <AuthorizeView Roles="Professional">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="timeslot-list">
                        <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Timeslot List
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
        <AuthorizeView Roles="Professional">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="manage-timeslot">
                        <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Timeslot Management
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="appointment-list">
                        <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Appointments
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
        
        @* <div class="nav-item px-3">
            <NavLink class="nav-link" href="weather">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Weather
            </NavLink>
        </div> *@
        <div class="nav-item px-3">
            <MudSwitch @bind-Value="_isDarkMode" Color="Color.Primary" Class="ma-4" T="bool" Label="Light/Dark" />
        </div>
    </nav>
</div>

@code{
    private MudTheme _theme = new();
    private bool _isDarkMode;
}